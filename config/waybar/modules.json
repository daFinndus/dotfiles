{
  "network": {
    "format": "{icon}",
    "format-disconnected": "󰤭",
    "format-icons": [
      "󰤠", "󰤢", "󰤥", "󰤨" 
    ],
    "tooltip-format": "{essid} via {ifname} at {signalStrength}%",
    "on-click": "kitty --title iwctl --class kitty -e iwctl",
  },
  "bluetooth": {
    "format": "{icon}",
    "format-icons": "󰂯",
    "format-connected": "󰂯",
    "format-disconnected": "󰂲",
    "format-disabled": "󰂲",
    "tooltip-format": "Disconnected (on)",
    "tooltip-format-disabled": "Disconnected (off)",
    "tooltip-format-connected": "{device_alias} ({device_battery_percentage}%)",
    "tooltip-format-enumerate-connected": "{device_alias} ({device_battery_percentage}%)",
    "on-click": "kitty --title bluetoothctl --class kitty -e bluetoothctl"
  },
  "pulseaudio": {
    "format": "{icon}",
    "format-muted": "󰖁",
    "format-icons": {
      "headphones": "",
      "headset": "󱡏",
      "default": [
        "󰝟",
        "󱄡",
        "󰖀",
        "󰕾"
      ]
    },
    "on-click": "pavucontrol",
    "tooltip-format": "Volume ({volume}%)"
  },
  "hyprland/window": {
    "format": "{}",
    "icon": true,
    "icon-size": 16,
    "max-length": 72,
  },
  "battery": {
    "format": "{icon}",
    "format-icons": [
      "󰂎", "󰁺", "󰁻", "󰁼", "󰁽", "󰁾", "󰁿", "󰂀", "󰂁", "󰂂", "󰁹"
    ],
    "format-charging": "󰂄",
    "format-full": "󱟢",
    "format-warning": "󰂃",
    "tooltip": true,
    "tooltip-format": "Discharging ({capacity}%)",
    "tooltip-format-charging": "Charging ({capacity}%)",
    "tooltip-format-full": "Full ({capacity}%)"
  },
  "custom/space": {
    "format": " ",
    "tooltip": false
  },
  "clock": {
    "format": "{:%I:%M %p}",
    "tooltip": true,
    "tooltip-format": "{:%d. %B on a %A}"
  },
  "tray": {
    "icon-size": 20,
    "spacing": 16
  },
  "custom/power": {
    "format": "󰐥",
    "tooltip": true,
    "tooltip-format": "Power menu (wlogout)",
    "on-click": "wlogout"
  },
  "custom/updater":{
    "format": "  {}",
    "exec": "~/.config/waybar/scripts/update-check.sh",
    "return-type": "json",
    "exec-if": "[[ $(checkupdates | wc -l) ]]", 
    "interval": 15, 
    "on-click": "kitty --class kitty --title updater -e yay -Syu && notify-send 'Updater' 'The system has been updated'",
  },
}
