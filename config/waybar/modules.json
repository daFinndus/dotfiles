{
  "network": {
    "format": "{icon}",
    "format-disconnected": "󰤭",
    "format-icons": [
      "󰤠", "󰤢", "󰤥", "󰤨" 
    ],
    "tooltip-format": "{essid} via {ifname} at {signalStrength}%",
    "on-click": "kitty --title iwctl --class kitty -e iwctl",
  },
  "bluetooth": {
    "format": "{icon}",
    "format-icons": "󰂯",
    "format-connected": "󰂯",
    "format-disconnected": "󰂲",
    "format-disabled": "󰂲",
    "tooltip-format": "Disconnected (on)",
    "tooltip-format-disabled": "Disconnected (off)",
    "tooltip-format-connected": "{device_alias} ({device_battery_percentage}%)",
    "tooltip-format-enumerate-connected": "{device_alias} ({device_battery_percentage}%)",
    "on-click": "kitty --title bluetoothctl --class kitty -e bluetoothctl"
  },
  "pulseaudio": {
    "format": "{icon}",
    "format-muted": "󰖁",
    "format-icons": {
      "headphones": "",
      "headset": "󱡏",
      "default": [
        "󰝟",
        "󱄡",
        "󰖀",
        "󰕾"
      ]
    },
    "on-click": "pavucontrol",
    "tooltip-format": "Volume ({volume}%)"
  },
  "hyprland/window": {
    "format": "{initialTitle}"
  },
  "battery": {
    "format": "{icon}",
    "format-icons": [
      "󰂎", "󰁺", "󰁻", "󰁼", "󰁽", "󰁾", "󰁿", "󰂀", "󰂁", "󰂂", "󰁹"
    ],
    "format-charging": "󰂄",
    "format-full": "󱟢",
    "format-warning": "󰂃",
    "tooltip": true,
    "tooltip-format": "Discharging ({capacity}%)",
    "tooltip-format-charging": "Charging ({capacity}%)",
    "tooltip-format-full": "Full ({capacity}%)"
  },
  "custom/space": {
    "format": " ",
    "tooltip": false
  },
  "clock": {
    "format": "{:%I:%M %p}",
    "on-click": "rofi -disable-history -show drun",
    "tooltip": true,
    "tooltip-format": "{:%d %B, %Y on a %A}"
  },
  "tray": {
    "icon-size": 20,
    "spacing": 16
  },
  "custom/power": {
    "format": "󰐥",
    "tooltip": true,
    "tooltip-format": "Power menu (wlogout)",
    "on-click": "wlogout"
  },
  "backlight": {
    "format": "{icon}",
    "format-icons": ["󰃞", "󰃝", "󰃟", "󰃠"],
    "interval": 2,
    "on-click": "hyprsunset -t 3750",
    "on-scroll-up": "brightnessctl s +5%",
    "on-scroll-down": "brightnessctl s 5%-",
    "tooltip": true,
    "tooltip-format": "Current brightness: {percent}%"
  }
}
